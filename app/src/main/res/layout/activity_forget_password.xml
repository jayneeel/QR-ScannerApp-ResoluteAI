<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.ForgetPasswordActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/back_btn"
        android:id="@+id/backBtn"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:src="@drawable/back_arrow_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/work_sans_medium"
            android:textStyle="bold"
            android:textColor="#00132D"
            android:textSize="32sp"
            android:text="Forget Password" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your Email Address registered with us"
            android:fontFamily="@font/work_sans_medium"/>

        <com.google.android.material.textfield.TextInputLayout

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/work_sans_medium"
            android:hint="Email"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#00132C"
                android:id="@+id/resetEmail"
                android:fontFamily="@font/work_sans_medium"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Send Verification Link"
            android:backgroundTint="#131F34"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:paddingVertical="15dp"
            android:paddingHorizontal="30dp"
            android:id="@+id/forgetBtn"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:fontFamily="@font/work_sans_medium"/>


    </LinearLayout>

</RelativeLayout>